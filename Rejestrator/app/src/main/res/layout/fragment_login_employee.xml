<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.fragment.LoginEmployee">

    <EditText
        android:id="@+id/IDTextInput"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="@string/ID"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/PinTextInput"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="@string/PIN"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/IDTextInput"
        app:layout_constraintStart_toStartOf="@+id/IDTextInput"
        app:layout_constraintTop_toBottomOf="@+id/IDTextInput"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black"
        android:text="@string/LoginButton"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PinTextInput"
        app:layout_constraintStart_toStartOf="@+id/PinTextInput"
        app:layout_constraintTop_toBottomOf="@+id/PinTextInput"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Administrator"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:text="@string/ChangeToAdminLoginButton"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginButton"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>