<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/row_employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imie"
            android:layout_alignParentStart="true"
            android:textColor="@color/aboveBack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/row_employeeSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwisko"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/row_employeeName"
            android:textColor="@color/aboveBack"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/row_chartButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="right"
            android:src="@drawable/ic_chart"
            android:tint="@color/aboveBack"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/row_employeeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="16sp"
            android:layout_below="@+id/row_employeeName" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>